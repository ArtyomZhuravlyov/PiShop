
@model List<Domain.Product>
@using Domain
@{
    ViewData["Title"] = "PriceAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<head>
    <link rel="stylesheet" href="~/css/Feedback.css" />
    <link rel="stylesheet" href="~/css/Admin.css" />
    <link rel="stylesheet" href="~/css/Catalog.css" />
    <link rel="stylesheet" href="~/css/Pages2.css" />
    <link rel="stylesheet" href="~/css/Footer.css" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:300,400,400i,700" rel="stylesheet">
    @*<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css"> пакость*@
    <link rel="stylesheet" href="~/css/ModalWindow.css">
</head>
<body>
    <div id="modDialog" class="modal fade">
        <div id="dialogContent" class="modal-dialog"></div>
    </div>

    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js'></script>

    <script src="~/lib/bootstrap/dist/js/index.js"></script>

    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <h2>PriceAdmin</h2>
    @using (Html.BeginForm("ChangeGeneralPrice", "Admin",
FormMethod.Post))
    {
        <input type="submit" value="Изменить все цены по одному значению" id="BTNchange" class="btn btn-primary" style="margin-left: 50%;" />
        <input type="number" name="generalPrice" style="margin-left: 50%;">
    }

    @using (Html.BeginForm("PriceAdmin", "Admin",
FormMethod.Post))
    {
        @*@Html.ActionLink("Изменить", "ModalText","Cart",
            new { text = "Изменения сохранены" }, new { @class = "compItem2  btn" } )*@

        <input type="submit" value="Изменить" id="BTNchange" class="btn btn-primary" style="position: fixed;    margin-left: 90%;" />
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">ID</th>
                <th class="text-center">Picture</th>
                <th width="50%">Название</th>

                <th class="text-center">Цена</th>
                @*<th class="text-center">Действие</th>*@
            </tr>

            @for (int i = 0; i < Model.Count(); i++)
            {
                <tr class="form-group">
                    <th class="text-right"> @Html.EditorFor(m => m[i].Id, "Id")</th>
                    <th class="text-right">
                        <img class="BigImage" src="~/images/Каталог товаров/@Html.DisplayFor(m => m[i].Address) " width="150" height="150" />
                    </th>

                    <th>@Html.EditorFor(m => m[i].Name, new { @class = "with100" })</th>

                    <th class="text-right">
                        @Html.EditorFor(m => m[i].Price)
                    </th>
                    @*<th class="text-center">
                        </th>*@
                    @*почему- то не работает передача всего product!!!!*@
                    @*@Html.Hidden("id", product_.Id)
                        @Html.Hidden("product2", product_)*@
                    @*@Html.Hidden("id", product.Id)*@



                </tr>

            }
            }
        </table>
        <input type="submit" />
    }
</body>




