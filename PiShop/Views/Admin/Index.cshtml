@model List<Domain.Order>
@{
    ViewData["Title"] = "IndexOrder";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel-heading">
    <h3>Список товаров</h3>
</div>
<div class="panel-footer">
    @Html.ActionLink("Товары", "IndexProduct", null,
       new { @class = "btn btn-default" })
    @Html.ActionLink("Цена товаров", "PriceAdmin", null,
        new { @class = "btn btn-default" })
</div>
<div class="panel-body">
    <table class="table table-striped table-condensed table-bordered">
        <tr>
            <th class="text-right">ID</th>
            <th class="text-right">ДАТА</th>
            <th>Фамилия</th>
            <th>Имя</th>

            <th class="text-right">Город</th>
            <th class="text-center">Телефон покупателя</th>
            <th class="text-right">Адрес</th>
            <th class="text-center">Сумма</th>
        </tr>
        @try
        {
            @*@foreach (var item in Model)*@
            @for (int i = Model.Count-1; i > 0; i--)
            {
        <tr>
            <td class="text-right">@Model[i].Id</td>
            <td class="text-right">@Model[i].TimeOrder</td>
            <td class="text-right">@Model[i].Surname</td>
            <td>@Html.ActionLink(Model[i].Name, "OrderView", new { Model[i].Id })</td>
            <td class="text-right">@Model[i].City</td>
            <td class="text-right">@Model[i].OurPhone</td>
            <td class="text-right">@Model[i].Adress</td>
            <td class="text-center">@Model[i].Amount.ToString("# руб") </td>
        </tr>
            }
        }
        catch (Exception ex)
        {
        }
    </table>
</div>