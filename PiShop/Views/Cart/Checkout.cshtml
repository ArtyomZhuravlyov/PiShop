@model Domain.ShippingDetails

@{
    ViewBag.Title = "Форма заказа";
    Layout = "~/Views/Shared/_CheckLayout.cshtml";
}

<div>

    @using (Html.BeginForm())
    {
        <div class="containerFormContactDate">
            @Html.ValidationSummary()
            <h3>Пожалуйста, введите ваши контактные данные</h3>
            @foreach (var property in ViewData.ModelMetadata.Properties)
            {

                <div class="form-group">
                    @switch (property.DisplayName)
                    {
                        case "Комментарий к заказу":
                            <label>@(property.DisplayName ?? property.PropertyName)</label>
                            @Html.TextArea(property.PropertyName, null, new { @class = "form-control MyForm-control", rows = 2 })
                            break;
                        case "Доставка":
                        case "UserAccess":
                        case "TypePay":
                        case null:
                            continue;
                        case "Ваш телефон":
                            <label><span style="color:red">*</span> @(property.DisplayName ?? property.PropertyName)</label>
                            <input class="form-control MyForm-control" type="tel" data-val="true" data-val-required="Ваш телефон" id="OurPhone" name="OurPhone"  value="+7(___)___-__-__" >
                            break;
                        case "Телефон Получателя":
                            <label> @(property.DisplayName ?? property.PropertyName)</label>
                            <input class="form-control MyForm-control" type="tel" data-val="true" data-val-required="телефон получателя" id="Phone" name="Phone" value="+7(___)___-__-__" >
                            break;
                        case "Электронная почта":
                            @*<label>@(property.DisplayName ?? property.PropertyName)</label>
                            @Html.TextBox(property.PropertyName, null, new { @class = "form-control MyForm-control" })*@
                            break;
                        default:
                            <label><span style="color:red">*</span> @(property.DisplayName ?? property.PropertyName)</label>
                            @Html.TextBox(property.PropertyName, null, new { @class = "form-control MyForm-control" })
                            break;
                    }
                </div>

            }
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        @Html.EditorFor(x => x.UserAccess)
                        <a class="OrangeColorText" target="_blank" href="~/images/Соглашение.pdf">Подтверждаю согласие на обработку своих персональных данных</a>  @*<embed src="ссылка файла pdf" width="ширина в пикселях" height="высота в пикселях" />*@
                    </label>
                </div>
                @*<div class="checkbox">
                        <label>
                            @Html.EditorFor(x => x.TypePay)
                            <a class="OrangeColorText">Доставка курьером по Москве или СПБ +350 руб</a>
                        </label>
                    </div>*@

            </div>

            <div class="text-center">
                <input class="btn buttonOrder" type="submit" value="ОБРАБОТАТЬ ЗАКАЗ" />
            </div>

        </div>
    }

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
    <script src="~/js/jquery.maskedinput.js"></script>
    <script type="text/javascript">
        $(function ($) {
            $("#Phone").mask("+7(999) 999-9999");
            $("#OurPhone").mask("+7(999) 999-9999");
